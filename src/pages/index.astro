---
import MainLayout from "@/layouts/main-layout.astro";
import { buttonVariants } from "@camped-ui/button";
import { cn } from "@camped-ui/lib";
---

<MainLayout title="Yokesh">
  <section class="space-y-6 pb-12 pt-16 lg:py-28">
    <div class="container flex flex-col items-center gap-5 text-center">
      <div class="flex items-center justify-between w-full">
        <div class="w-1/2">
          <img
            src="profile.jpeg"
            alt="Yokesh Profile Photo"
            width="90%"
            height="90%"
          />
        </div>
        <div class="w-1/2">
          <h1
            class="font-heading text-4xl font-bold sm:text-5xl md:text-6xl lg:text-7xl !leading-[1.1] text-left"
          >
            Revolutionizing Digital With
            <span class="text-gradient_indigo-purple"> Responsive Design.</span>
          </h1>

          <p
            class="max-w-[42rem] leading-normal text-muted-foreground sm:text-xl sm:leading-8 text-left mt-4"
          >
            As a passionate Full Stack Web Developer, I strive to transform
            ideas into innovative web applications using responsive website
            design. Explore my latest projects and article
          </p>
          <div class="flex items-center self-start mt-2">
            <a
              href="https://resume.aceprep.camped.academy/s/gOZRelGr"
              target="_blank"
              class={cn(buttonVariants({ size: "lg" }))}
            >
              Resume
            </a>
            <a
              href="mailto:ksyokesh98@gmail.com"
              class={cn(buttonVariants({ size: "lg", variant: "link" }))}
            >
              Contact
            </a>
          </div>
        </div>
      </div>
    </div>
  </section>
</MainLayout>
